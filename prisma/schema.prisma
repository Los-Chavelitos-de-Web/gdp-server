generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(50)
  email     String   @unique
  password  String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  sales     Sale[]
}

model Product {
  id          Int      @id @default(autoincrement())
  title        String
  description String?
  brand       String
  price       Float
  stock       Int
  createdAt   DateTime @default(now())
  sales       SaleItem[]
}

model Sale {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  createdAt  DateTime  @default(now())
  total      Float
  items      SaleItem[]
}

model SaleItem {
  id           Int     @id @default(autoincrement())
  sale         Sale    @relation(fields: [saleId], references: [id])
  saleId       Int
  product      Product @relation(fields: [productId], references: [id])
  productId    Int
  quantity     Int
  unit_price   Float
}

enum Role {
  ADMIN
  CUSTOMER
}